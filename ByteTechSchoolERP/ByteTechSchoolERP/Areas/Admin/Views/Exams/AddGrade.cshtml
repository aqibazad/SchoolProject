    <script>
        $(document).ready(function () {
            
            // Initialize DataTable
            debugger
            var table = $('#GradeId').DataTable({
                "ajax": {
                    "url": "/Admin/Exams/GradeList",
                    "type": "GET",
                    "dataType": "json",
                    "dataSrc": "data",
                    "error": function (xhr, error, thrown) {
                        console.error('Error fetching data:', error, thrown);
                    }
                },
                "columns": [
                    { "data": "title" },
                    { "data": "description" },
                    { "data": "grades" },
                    { "data": "maxPercentage" },
                    { "data": "minPercentage" },
                    { "data": "remark" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return `
                                    <div class="container d-md-flex">
                                        <button class="btn btn-primary btn-sm edit-btn mr-2" data-id="${data.id}" data-grade-title="${data.gradeTitle}" data-description="${data.description}" data-grades="${data.grades}" data-max="${data.maximumPercentage}" data-min="${data.minimumPercentage}" data-remark="${data.remark}" data-toggle="modal" data-target="#editModal">
                                            <i style="font-size:15px" class="fa">&#xf044;</i>
                                        </button>
                                        <button class="btn btn-danger btn-sm delete-btn" data-id="${data.id}">
                                            <i style="font-size:15px" class="fa">&#xf1f8;</i>
                                        </button>
                                    </div>`;
                        }
                    }
                ]
            });

            // Handle form submission for adding a new grade
            $('#addGradeForm').on('submit', function (e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.post('/Admin/Exams/AddGrade', formData, function (response) {
                    if (response.isSuccess) {
                        table.ajax.reload();  // Reload the table to show the new grade
                        $('#addGradeForm')[0].reset();  // Reset the form fields
                        toastr.success(response.message || 'Grade added successfully!');
                    } else {
                        toastr.error(response.message || 'Failed to add grade.');
                    }
                }).fail(function (jqXHR, textStatus, errorThrown) {
                    toastr.error('Failed to add grade. ' + textStatus + ': ' + errorThrown);
                });
            });

            // Handle form submission for editing a grade
            $('#editGradeForm').on('submit', function (e) {
                e.preventDefault();
                var formData = $(this).serialize(); // Serialize form data

                $.post('/Admin/Exams/EditGrade', formData, function (response) {
                    if (response.isSuccess) {
                        table.ajax.reload();  // Refresh DataTable
                        $('#editModal').css('display', 'none');
                        $('#editModal').removeClass('show');  // Remove Bootstrap's 'show' class
                        $('body').removeClass('modal-open');  // Remove 'modal-open' class from the body
                        $('.modal-backdrop').remove();  // Hide modal using CSS
                        toastr.success('Grade updated successfully!');
                    } else {
                        toastr.error('Failed to update grade.');
                    }
                }).fail(function (jqXHR, textStatus, errorThrown) {
                    toastr.error('An error occurred while updating the grade. ' + textStatus + ': ' + errorThrown);
                });
            });

            // Populate the Edit form with data from the table row
            $('#GradeId tbody').on('click', '.edit-btn', function () {
                var id = $(this).data('id');
                var gradeTitle = $(this).data('grade-title');
                var description = $(this).data('description');
                var grades = $(this).data('grades');
                var maximumPercentage = $(this).data('max');
                var minimumPercentage = $(this).data('min');
                var remark = $(this).data('remark');

                $('#editGradeId').val(id);
                $('#editGradeTitle').val(gradeTitle);
                $('#editDescription').val(description);
                $('#editGrades').val(grades);
                $('#editMaximumPercentage').val(maximumPercentage);
                $('#editMinimumPercentage').val(minimumPercentage);
                $('#editRemark').val(remark);
            });

            // Handle delete button click
            $('#GradeId tbody').on('click', '.delete-btn', function () {
                var id = $(this).data('id');
                var confirmed = confirm('Are you sure you want to delete this grade?');

                if (confirmed) {
                    $.post('/Admin/Exams/DeleteGrade', { id: id }, function (response) {
                        if (response.isSuccess) {
                            table.ajax.reload();  // Refresh DataTable
                            toastr.success('Grade deleted successfully!');
                        } else {
                            toastr.error('Failed to delete grade.');
                        }
                    }).fail(function (jqXHR, textStatus, errorThrown) {
                        toastr.error('An error occurred while deleting the grade. ' + textStatus + ': ' + errorThrown);
                    });
                }
            });
        });
    </script>
</body>

