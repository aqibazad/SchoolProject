@section Scripts{
    <script>
        function toggleFields() {
            var type = document.getElementById("type").value;
            var specificClassField = document.getElementById("specificClassField");
            var specificStudentField = document.getElementById("specificStudentField");

            if (type === "SC") {
                specificClassField.style.display = "block";
                specificStudentField.style.display = "none";
            } else if (type === "SS") {
                specificClassField.style.display = "none";
                specificStudentField.style.display = "block";
            } else {
                specificClassField.style.display = "none";
                specificStudentField.style.display = "none";
            }

        }
