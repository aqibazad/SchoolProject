            <script>
                function showMarksGrading() {
                    var marksGradingSection = document.getElementById("marks-grading-section");
                    var failCriteriaSection = document.getElementById("fail-criteria-section");

                    marksGradingSection.style.display = "block";
                    failCriteriaSection.style.display = "none";
                }

                function showFailCriteria() {
                    var marksGradingSection = document.getElementById("marks-grading-section");
                    var failCriteriaSection = document.getElementById("fail-criteria-section");

                    marksGradingSection.style.display = "none";
                    failCriteriaSection.style.display = "block";
                }
            </script>
            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    // Get reference to buttons and table
                    var addOptionBtn = document.getElementById("add-option-btn");
                    var removeOptionBtn = document.getElementById("remove-option-btn");
                    var gradingTable = document.getElementById("grading-table").getElementsByTagName('tbody')[0];

                    // Add event listener for adding option
                    addOptionBtn.addEventListener("click", function () {
                        // Clone the first row
                        var newRow = gradingTable.rows[0].cloneNode(true);
                        // Append the new row to the table
                        gradingTable.appendChild(newRow);
                    });

                    // Add event listener for removing option
                    removeOptionBtn.addEventListener("click", function () {
                        // Ensure there's at least one row before removing
                        if (gradingTable.rows.length > 1) {
                            // Remove the last row
                            gradingTable.removeChild(gradingTable.lastChild);
                        }
                    });
                });

            </script>


