@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CampusId').DataTable({
                "ajax": {
                    "url": "/Admin/SubAdminRegister/CampusList",
                    "type": "GET",
                    "dataType": "json",
                    "dataSrc": "data"
                },
                "columns": [
                    { "data": "campusName", "name": "Campus" },
                    { "data": "city", "name": "City" },
                    { "data": "area", "name": "Area" },
                    { "data": "description", "name": "Description" },
                    {
                        "data": null,
                        "render": function (data, type, row) {
                            return `
                                        <div class="container">
                                            <button class="btn btn-primary btn-sm edit-btn"
                                                    data-id="${data.campusId}"
                                                    data-campus-name="${data.campusName}"
                                                    data-city-name="${data.city}"
                                                    data-area-name="${data.area}"
                                                    data-description="${data.description}"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#editCampus">
                                                <i style="font-size:15px" class="fa">&#xf044;</i>
                                            </button>
                                            <button class="btn btn-danger btn-sm delete-btn" data-id="${data.campusId}">
                                                <i style="font-size:15px" class="fa">&#xf1f8;</i>
                                            </button>
                                        </div>
                                    `;
                        }
                    }
                ]
            });

            $('#CampusId').on('click', '.delete-btn', function () {
                var campusId = $(this).data('id'); // Ensure the correct data attribute is used

                if (confirm('Are you sure you want to delete this campus?')) {
                    $.post('/Admin/SubAdminRegister/DeleteCampuses', { campusId: campusId }, function (response) {
                        if (response.isSuccess) {
                            $('#CampusId').DataTable().ajax.reload();
                            toastr.success('Campus deleted successfully!');
                        } else {
                            toastr.error(response.message || 'Failed to delete campus.');
                        }
                    }).fail(function () {
                        toastr.error('An error occurred while deleting the campus.');
                    });
                }
            });

            // Populate edit modal with campus data
            $('#CampusId').on('click', '.edit-btn', function () {
                var campusId = $(this).data('id');
                var campusName = $(this).data('campus-name');
                var cityName = $(this).data('city-name');
                var areaName = $(this).data('area-name');
                var description = $(this).data('description');

                $('#editCampusId').val(campusId);
                $('#editCampusName').val(campusName);
                $('#editCityName').val(cityName);
                $('#editAreaName').val(areaName);
                $('#editDescription').val(description);
            });

            // Handle form submission for editing
            $('#editClassForm').on('submit', function (e) {
                e.preventDefault();
                var formData = $(this).serialize();

                $.post('/Admin/SubAdminRegister/EditCampus', formData, function (response) {
                    if (response.isSuccess) {
                        $('#CampusId').DataTable().ajax.reload();
                        $('#editCampus').modal('hide');
                        toastr.success('Campus updated successfully!');
                    } else {
                        toastr.error(response.message || 'Failed to update campus.');
                    }
                });
            });
        });
    </script>
}



