<style>
    .flip-card {
        perspective: 1000px;
    }

    .flip-card-inner {
        width: 300px;
        height: 200px;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.2);
        border-radius: 15px;
    }

    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg);
    }

    .flip-card-front,
    .flip-card-back {
        position: absolute;
        width: 100%;
        height: 100%;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 15px;
        padding: 20px;
        box-sizing: border-box;
        transition: background-color 0.4s, transform 0.4s;
    }

    .flip-card-front {
        background: linear-gradient(135deg, #FF6E6E, #FFC66E);
        color: white;
        transform: rotateY(0deg);
    }

    .flip-card-back {
        background: linear-gradient(135deg, #FFC66E, #FF6E6E);
        color: white;
        transform: rotateY(180deg);
    }

    .flip-card h3 {
        font-size: 24px;
        margin-bottom: 10px;
    }

    .flip-card p {
        font-size: 16px;
    }

    .flip-card:hover .flip-card-front {
        background: linear-gradient(135deg, #FFC66E, #FF6E6E);
        transform: scale(0.9);
    }

    .flip-card:hover .flip-card-back {
        background: linear-gradient(135deg, #FF6E6E, #FFC66E);
        transform: rotateY(180deg) scale(0.9);
    }

    .flip-card-button {
        background-color: transparent;
        border: 2px solid #fff;
        color: #fff;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, color 0.3s;
    }

        .flip-card-button:hover {
            background-color: #fff;
            color: #FF6E6E;
        }
</style>
