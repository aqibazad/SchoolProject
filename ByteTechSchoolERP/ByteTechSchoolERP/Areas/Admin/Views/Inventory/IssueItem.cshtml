                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="issueItemModalLabel"> Issue Item</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <form id="issueItemForm">
                            <div class="row">
                                <div class="form-group col-md-6">

                                    <label for="item">Item</label>
                                    <input type="text" class="form-control" id="item" required>
                                </div>
                                <div class="form-group  col-md-6">
                                    <label for="itemCategory">Item Category</label>
                                    <input type="text" class="form-control" id="itemCategory" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="issueReturn">Issue-Return </label>
                                    <input type="datetime" class="form-control" id="issueReturn" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="issueTo">Issue To </label>
                                    <input type="text" class="form-control" id="issueTo" required>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label for="issueBy">Issue By</label>
                                    <input type="text" class="form-control" id="issueBy" required>
                                </div>
                                <div class="form-group col-md-6">
                                    <label for="quantity">Quantity</label>
                                    <input type="number" class="form-control" id="quantity" required>
                                </div>
                            </div>
                            <button type="submit" class="btn btn-primary">Issue Item</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>




    </div>



</div>


