@section Scripts{
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            document.getElementById('issueItemForm').addEventListener('submit', function (event) {
                event.preventDefault();

                // Get form values
                const item = document.getElementById('item').value;
                const itemCategory = document.getElementById('itemCategory').value;
                const issueReturn = document.getElementById('issueReturn').value;
                const issueTo = document.getElementById('issueTo').value;
                const issueBy = document.getElementById('issueBy').value;
                const quantity = document.getElementById('quantity').value;


                // Insert a new row in the table
                const table = document.querySelector('#example tbody');
                const newRow = table.insertRow();

                newRow.innerHTML = `
                            <td>${item}</td>
                            <td>${itemCategory}</td>
                            <td>${issueReturn}</td>
                            <td>${issueTo}</td>
                            <td>${issueBy}</td>
                            <td>${quantity}</td>

                            <td><button class="btn btn-primary editBtn"><i class="fas fa-edit edit-icon"></i></button></td>
                        `;

                // Close the modal
                $('#issueItemModal').modal('hide');

                // Reset the form
                document.getElementById('issueItemForm').reset();
            });
        });
    </script>
    <!-- DataTables Initialization Script -->
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
    <script>
