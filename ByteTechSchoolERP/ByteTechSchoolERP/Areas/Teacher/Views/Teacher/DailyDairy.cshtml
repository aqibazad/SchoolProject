@model ByteTechSchoolERP.Models.ViewModels.ClassSectionSubjectViewModel
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Admin Dashboard</title>
    <link rel="shortcut icon" href="assets/img/favicon.png">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;0,900;1,400;1,500;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="assets/plugins/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/plugins/feather/feather.css">
    <link rel="stylesheet" href="assets/plugins/icons/flags/flags.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="assets/plugins/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="assets/css/style.css">
    <link rel="stylesheet" href="assets/css/custom-style.css">
    <!-- DataTables CSS -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">
    <!-- Animate.css CDN -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>

<body>
    <div class="page-wrapper">
        <div class="tab-container container-fluid mt-3">
            <div class="col-md-12">
                <div class="style-0" style="max-width: 100%; margin:0px; border: 1px solid #ebe4e4;">
                    <strong>Home Work </strong> |
                    <i class="fas fa-home home-icon"></i> - Homework Diary
                </div>
            </div>
        </div>

        <div class="tab-container container-fluid d-md-flex">
            <div class="col-md-12 mt-4" id="classFormContainer">
                <div class="style-0 pl-4" style="max-width:100%; margin:0px; border: 1px solid #ebe4e4;" id="classFormData">
                    <div class="row">
                        <div class="row">
                            <div class="row">
                                <br>
                                <div class="tab-content" id="homeworkTabsContent">
                                    <div class="tab-pane fade show active" id="upcomingHomework" role="tabpanel" aria-labelledby="upcoming-tab">
                                        <div class="col-md-12" >
                                            <br>
                                        </div>

                                        <form asp-action="SaveDiary" asp-controller="Teacher" asp-area="Teacher" method="post" enctype="multipart/form-data">
                                            <div class="row mb-3">
                                                <div class="col-md-6 local-forms label">
                                                    <label for="class" class="form-label" id="label-color">Class</label>
                                                    <select id="class" name="ClassId" class="form-select form-control" required>
                                                        <option value="">Select Class</option>
                                                        <option value="@Model.ClassId" selected>@Model.ClassName</option>
                                                        <!-- Populate with other class options if needed -->
                                                    </select>
                                                </div>
                                                <div class="col-md-6 local-forms label">
                                                    <label for="section" class="form-label" id="label-color">Section</label>
                                                    <select id="section" name="SectionId" class="form-select form-control" required>
                                                        <option value="">Select Section</option>
                                                        <option value="@Model.SectionId" selected>@Model.SectionName</option>
                                                        <!-- Populate with other section options if needed -->
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="row mb-3 mt-3">
                                                <div class="col-md-6 local-forms label">
                                                    <label for="subject" class="form-label" id="label-color">Subject</label>
                                                    <select id="subject" name="SubjectId" class="form-select form-control" required>
                                                        <option value="">Select Subject</option>
                                                        <option value="@Model.SubjectId" selected>@Model.SubjectName</option>
                                                        <!-- Populate with other subject options if needed -->
                                                    </select>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6 local-forms label">
                                                    <label for="homeworkDate" id="label-color" class="form-label">Homework Date</label>
                                                    <input type="date" id="homeworkDate" name="HomeworkDate" class="form-control"
                                                           min="2024-01-01"
                                                           value="@Model.HomeworkDate.ToString("yyyy-MM-dd")"
                                                           required />
                                                </div>
                                                <div class="col-md-6 local-forms label">
                                                    <label for="submissionDate" id="label-color" class="form-label">Submission Date</label>
                                                    <input type="date" id="submissionDate" name="SubmissioDate" class="form-control"
                                                           min="2024-01-01"
                                                           value="@Model.SubmissioDate.ToString("yyyy-MM-dd")"
                                                           required />
                                                </div>

                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-6 local-forms label">
                                                    <label for="attachDocument" id="label-color" class="form-label">Attach Document</label>
                                                    <input type="file" id="attachDocument" name="AttachDocument" class="form-control" />
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-12 local-forms label">
                                                    <label for="description" id="label-color" class="form-label">Description</label>
                                                    <textarea id="description" name="Description" class="form-control"  required rows="3">@Model.Description</textarea>
                                                </div>
                                            </div>
                                            <div class="col-md-12 d-flex justify-content-end">
                                            <button type="submit" class="btn btn-primary">Save Homework</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Add Homework Modal -->
                    </div>
                </div>
            </div>

            <!-- JS Inclusions -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
            <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

            <script>
                document.addEventListener("DOMContentLoaded", function () {
                    var today = new Date().toISOString().split('T')[0];
                    var homeworkDateInput = document.getElementById("homeworkDate");
                    var submissionDateInput = document.getElementById("submissionDate");

                    if (!homeworkDateInput.value) {
                        homeworkDateInput.value = today;
                    }
                    if (!submissionDateInput.value) {
                        submissionDateInput.value = today;
                    }
                });
            </script>
        </div>
    </div>
    <footer class="mt-4">
        <p>Copyright © 2024 ByteTech Solution.</p>
    </footer>
    <script src="assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="assets/js/feather.min.js"></script>
    <script src="assets/plugins/slimscroll/jquery.slimscroll.min.js"></script>
    <script src="assets/plugins/apexchart/apexcharts.min.js"></script>
    <script src="assets/plugins/apexchart/chart-data.js"></script>
    <script src="assets/js/script.js"></script>
</body>

</html>
